<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/app_back"
    tools:context=".ui.fragments.SignupFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edit_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_hey_there"
                android:textAlignment="center"
                style="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_create_an_account"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/ic_login_person"
                android:drawablePadding="8dp"
                android:hint="@string/username"
                android:padding="8dp"
                style="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="40dp"
                android:autofillHints=""
                android:maxLength="15"
                android:inputType="text" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/ic_login_lock"
                android:drawablePadding="8dp"
                android:hint="@string/password"
                android:padding="8dp"
                style="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="20dp"
                android:autofillHints=""
                android:maxLength="15"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/password_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                style="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:hint="@string/confirm_password"
                android:drawableStart="@drawable/ic_signup_password"
                android:drawablePadding="8dp"
                android:background="@drawable/custom_edit_text"
                android:autofillHints=""
                android:maxLength="15"
                android:inputType="textPassword"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                style="?android:attr/progressBarStyle"/>

            <Button
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/continue_txt"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                app:cornerRadius= "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>